<% // Render individual movie details here %>
<% // This is how to do comments in EJS, by the way... %>

<h1>
    <%= movieDetails.Title%>
</h1>
<img src="<%= movieDetails.Poster %>" alt="<%= movieDetails.Title %> Poster">

<% const props = ['Title', 'Year', 'Rated', 'Released', 'Runtime', 'Genre', 'Director', 'Writer', 'Actors', 'Plot'] %>
<% for (prop of props) { %>
<p><%= prop %> : <%= movieDetails[prop] %> </p>
<% } %>

<form action="/movies/faves" method="POST">
    <label>Add to Favorites</label>
    <input type="hidden" name="title" value="<%= movieDetails.Title %>">
    <input type="hidden" name="imdbid" value="<%= movieDetails.imdbID %>">
    <input type="submit">
</form>